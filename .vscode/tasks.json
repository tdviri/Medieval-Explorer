{
    "version": "2.0.0",
    "tasks": [
                {
            "type": "shell",
            "label": "compile-main-program",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "/usercode/main.c",
                "-Wall",
                "-Werror",
                "-o",
                "/usercode/main.bin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/gcc"
        },
        {
            "type": "shell",
            "label": "compile-main.cpp-program",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "/usercode/main.cpp",
                "-Wall",
                "-Werror",
                "-o",
                "/usercode/main.bin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}